{
  "name": "@picasso/web",
  "version": "0.0.1",
  "description": "Web Mono Repo",
  "main": "index.js",
  "author": "Hemant Verma <fameoflight@gmail.com>",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "overrides": {
    "typescript": "$typescript"
  },
  "scripts": {
    "dev": "npm-run-all --parallel dev:tsc dev:relay",
    "dev:relay": "yarn relay-compiler --watch",
    "dev:tsc": "tsc --build  --watch",
    "web": "yarn workspace @picasso/webapp dev",
    "build": "yarn workspace @picasso/webapp build",
    "serve": "serve -s packages/webapp/dist -l $PORT",
    "home": "yarn workspace @picasso/home dev",
    "home-build": "yarn workspace @picasso/home build",
    "home-serve": "yarn workspace @picasso/home start",
    "home-build-serve": "yarn home-build && PORT=3002 yarn home-serve",
    "postinstall": "yarn run relay-compiler && node ./scripts/postinstall.js",
    "dedupe": "npx yarn-deduplicate && yarn install"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.5",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.14",
    "@vitejs/plugin-basic-ssl": "^1.1.0",
    "framer-motion": "^11.3.28",
    "lucide-react": "^0.428.0",
    "posthog-js": "^1.155.4",
    "react-markdown": "^9.0.1",
    "react-qr-code": "^2.0.15",
    "react-to-print": "^2.14.7",
    "serve": "^14.0.1",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "^3.4.10",
    "vite-plugin-relay": "^2.0.0"
  },
  "devDependencies": {
    "@graphql-eslint/eslint-plugin": "^3.12.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/fuzzaldrin": "*",
    "@types/is-hotkey": "*",
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.3.0",
    "@types/rails__activestorage": "^7.0.1",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/react-relay": "^16.0.6",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.1.3",
    "babel-plugin-relay": "^17.0.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-unused-imports": "^4.1.3",
    "graphql": "^16.9.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.41",
    "postcss-import": "^16.0.1",
    "postcss-loader": "^8.1.0",
    "prettier": "3.3.3",
    "relay-compiler": "^17.0.0",
    "source-map-explorer": "^2.5.3",
    "typescript": "^5.5.4",
    "vite": "^5.4.1"
  }
}
